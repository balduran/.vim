set encoding=utf-8
set fileencoding=utf-8
set fileencodings=utf-8,cp950,big5,eucjp,gbk,euc-kr,utf-bom,iso8859-1
set termencoding=utf-8
set ambiwidth=double

set mouse=a

set nu
set ch=2
set ci

set wrapscan
set incsearch
set ignorecase

nmap <C-T>c :tabnew<CR>
nmap <C-T>k :tabclose<CR>
nmap <C-H> :tabprev<CR>
nmap <C-L> :tabnext<CR>

map <F2> :NERDTreeToggle<CR>
set showcmd

set expandtab
set shiftwidth=2
set softtabstop=2
set tabstop=2

set foldenable


syntax on

set t_Co=256
set background=dark

